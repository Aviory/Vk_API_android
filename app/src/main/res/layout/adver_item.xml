<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advertItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtMyAcc"
        android:text="@string/txt_myAcc"
        android:textSize="@dimen/font_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/vk_black"
        android:layout_marginTop="@dimen/margin_smallest"/>

    <TextView
        android:id="@+id/txtAcc_Id"
        android:text="@string/txt_acc_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/vk_black"
        android:layout_marginTop="@dimen/margin_smallest"
        android:layout_below="@id/txtMyAcc"
        />
    <TextView
        android:id="@+id/txtAcc_balance"
        android:text="@string/txt_acc_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/vk_black"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_below="@id/txtMyAcc"
        />
</RelativeLayout>